<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>ch.heigvd.amt.projectone.presentation.AuthorizationFilter</filter-class>
    </filter>
    <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>ch.heigvd.amt.projectone.presentation.LoginServlet</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>ManageScreeningServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.projectone.presentation.ManageScreeningServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageMovieServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.projectone.presentation.ManageMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.projectone.presentation.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RandomDataServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.projectone.presentation.RandomDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageCinemaServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.projectone.presentation.ManageCinemaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ch.heigvd.amt.projectone.presentation.LogoutServlet</servlet-class>
    </servlet>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageScreeningServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageMovieServlet</servlet-name>
        <url-pattern>/manageMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageCinemaServlet</servlet-name>
        <url-pattern>/manageCinema</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RandomDataServlet</servlet-name>
        <url-pattern>/generateRandomData</url-pattern>
    </servlet-mapping>
</web-app>
